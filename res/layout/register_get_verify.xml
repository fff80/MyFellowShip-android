<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRigGetVerify"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/include_split" />
        <EditText
            android:id="@+id/phonEditText"
            style="@style/EtTheme" 
            android:hint="请输入手机号(6-16位)"
            android:inputType="phone"
            android:maxLength="16"
            android:padding="@dimen/ten_dp" >
        </EditText>

        <include layout="@layout/include_split" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/phoneVerify"
                style="@style/EtTheme"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:padding="@dimen/ten_dp" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@drawable/bg_round_corner"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textColor="@color/white"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    	<include layout="@layout/include_split" />
        <EditText
            android:id="@+id/etPwd"
            style="@style/EtTheme" 
            android:hint="请输入密码(6-13位数字或字母)"
            android:inputType="textPassword"
            android:maxLength="11"
            android:padding="@dimen/ten_dp" />

        <include layout="@layout/include_split" />
        <EditText
            android:id="@+id/etConfirmPwd"
            style="@style/EtTheme" 
            android:hint="请确认密码(6-13位数字或字母)"
            android:inputType="textPassword"
            android:maxLength="11"
            android:padding="@dimen/ten_dp" />
        
        <include layout="@layout/include_split" />
        
        <Button
            android:id="@+id/btnNext"
            style="@style/BtnCommitTheme"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:text="下一步"  />
    </LinearLayout>

</LinearLayout>